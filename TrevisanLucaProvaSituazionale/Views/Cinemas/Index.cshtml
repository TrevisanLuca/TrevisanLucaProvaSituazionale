@model IEnumerable<CinemaViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cinema.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gross)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cinema.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gross)
                </td>
                <td>
                    @Html.ActionLink("View cinema's halls","Index","CinemaHalls",new {Id = item.Cinema.Id}, new { @class = "btn btn-sm btn-outline-primary" })
                    @Html.ActionLink("Edit","Edit", new {Id = item.Cinema.Id}, new { @class = "btn btn-sm btn-outline-primary" })
                    @Html.ActionLink("Details","Details", new {Id = item.Cinema.Id}, new { @class = "btn btn-sm btn-outline-primary" })
                    @Html.ActionLink("Delete","Delete", new {Id = item.Cinema.Id}, new { @class = "btn btn-sm btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>