@model CinemaHallViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CinemaHall</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CinemaHall.Id" />
            <div class="form-group">
                <label asp-for="CinemaHall.Name" class="control-label"></label>
                <input asp-for="CinemaHall.Name" class="form-control" />
                <span asp-validation-for="CinemaHall.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CinemaHall.CinemaId" class="control-label">Cinema</label>
                <select asp-for="CinemaHall.CinemaId" class ="form-control" asp-items="Model.Cinemas"></select>
            </div>
            <div class="form-group">
                <label asp-for="CinemaHall.FilmId" class="control-label">Movie</label>
                <select asp-for="CinemaHall.FilmId" class ="form-control" asp-items="Model.Movies"></select>
            </div>
            <div class="form-group">
                <label asp-for="CinemaHall.MaxSpectators" class="control-label">Max spectators</label>
                <input asp-for="CinemaHall.MaxSpectators" class="form-control" />
                <span asp-validation-for="CinemaHall.MaxSpectators" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Back to List","Index", null, null, new { @class = "btn btn-sm btn-outline-primary" })
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}