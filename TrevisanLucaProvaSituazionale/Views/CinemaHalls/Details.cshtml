@model CinemaHall

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>CinemaHall</h4>
    <hr />
    <dl class="row">        
        <dt class = "col-sm-2">Hall Name</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">Cinema</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cinema.Name)
        </dd>
        <dt class = "col-sm-2">Max Spectators</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxSpectators)
        </dd>
        <dt class = "col-sm-2">Running movie</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Film.Title)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit","Edit",null,new {Id = Model?.Id}, new { @class = "btn btn-sm btn-outline-primary" })
    @Html.ActionLink("Back to List","Index",null,null, new { @class = "btn btn-sm btn-primary" })
</div>